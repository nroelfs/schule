@page "/login"
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <img src="~/favicon.ico" alt="logo" class="img-fluid" />
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating-mb-1">
                    <label asp-for="Input.Username" class="form-label">Benutzername</label>
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <br />
                <div class="form-floating-mb-1">
                    <label asp-for="Input.Password" class="form-label">Passwort</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br />
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #664EA3;">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
